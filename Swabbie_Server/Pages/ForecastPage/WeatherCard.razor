<div class="card text-center h-100">
    @if (!string.IsNullOrWhiteSpace(DateTime))
    {
        <div class="card-header">
            @DateTime
        </div>
    }
    <MudCard Outlined="true">
    <MudCardContent>
        <MudImage Src="@WeatherIconImgSrc" Elevation="25" Class="rounded-lg"/>
        <MudText>@WeatherDescription</MudText>
        <MudText Typo="Typo.body2">@Temperature °c</MudText>
        <MudText Typo="Typo.body2">Feels like @TemperatureFeelsLike °c</MudText>
        <MudText Typo="Typo.body2">Max @TemperatureMax °c Min @TemperatureMin °c</MudText>
        <MudText Typo="Typo.body2">@Humidity % humidity</MudText>
        <MudText Typo="Typo.body2">Wind @WindSpeed meter/sec</MudText>
    </MudCardContent>
    <MudCardActions>
        <MudButton Variant="Variant.Text" Color="Color.Primary">Learn More</MudButton>
    </MudCardActions>
</MudCard>


